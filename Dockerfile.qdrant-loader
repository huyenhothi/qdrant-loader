# Dockerfile for qdrant-loader
FROM python:3.12-slim

WORKDIR /qdrant-loader

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    procps \
    strace \
    && rm -rf /var/lib/apt/lists/*

# Copy package files
COPY packages/qdrant-loader-core /qdrant-loader/packages/qdrant-loader-core
COPY packages/qdrant-loader /qdrant-loader/packages/qdrant-loader
COPY config.yaml /qdrant-loader

# Install packages
RUN pip install --no-cache-dir -e /qdrant-loader/packages/qdrant-loader-core[openai,ollama] && \
    pip install --no-cache-dir -e /qdrant-loader/packages/qdrant-loader

RUN python -m spacy download en_core_web_md
# Create workspace directory
RUN mkdir -p /workspace

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PATH="/profiling_scripts:${PATH}"

# Default command
CMD ["qdrant-loader", "--help"]
